
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<script src="~/Scripts/angular.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div ng-app="myApp" ng-controller="myCtrl">
		<p>List users</p>
		<ul>
			<item-user></item-user>
		</ul>
		<form name="userForm">
			<input type="email" name="email" ng-model="email" value=""/>  <input type="button" value="Add" ng-click="addUser()"/>
		</form>
		<span ng-show="userForm.email.$invalid">The email is invalid.</span>
    </div>

	<script src="~/Scripts/myScript/myScript.js"></script>
</body>
</html>
